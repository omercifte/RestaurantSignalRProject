		<script type="text/javascript">

				$(document).ready(() => {

					var connection = new signalR.HubConnectionBuilder()
						.withUrl("http://localhost:5003/SignalRHub/")
						.build();

					$("#connstatus").text(connection.state);


					connection.start().then(() => {
						$("#connstatus").text(connection.state);
							setInterval(() => {
						connection.invoke("SendStatisticCount");
					}, 1000);

					}).catch(err => {
						console.log(err);
					});



			connection.on("ReceiveCategoryCount", (value) => {
					$("#categorycount").text(value);
				});

			connection.on("ReceiveProductCount", (value2) => {
					$("#productcount").text(value2);
			});

			connection.on("ReceiveActiveCategoryCount", (value3) => {
					$("#activecategorycount").text(value3);
			});

			connection.on("ReceivePassiveCategoryCount", (value4) => {
					$("#passivecategorycount").text(value4);
			});

			// connection.on("ReceiveProductPriceAvg", (value5) => {
			// 		$("#productpriceavg").text(value5);
			// });

			connection.on("ReceiveTableCount", (value13) => {
					$("#tablecount").text(value13);
			});

			connection.on("ReceiveProductNameByMaxPrice", (value6) => {
					$("#productnamebymaxprice").text(value6);
			});

			connection.on("ReceiveProductNameByMinPrice", (value7) => {
					$("#productnamebyminprice").text(value7);
			});

			connection.on("ReceiveTotalOrderCount", (value8) => {
					$("#totalordercount").text(value8);
			});

			connection.on("ReceiveActiveOrderCount", (value9) => {
					$("#activeordercount").text(value9);
			});

			connection.on("ReceiveLastOrderPrice", (value10) => {
					$("#lastorderprice").text(value10);
			});

			connection.on("ReceiveTodayTotalPrice", (value11) => {
					$("#todaytotalprice").text(value11);
			});

			connection.on("ReceiveTotalMoneyCaseAmount", (value12) => {
					$("#totalmoneycaseamount").text(value12);
			});

				});
		</script>

