@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="midde_cont">
	<div class="container-fluid">
		<div class="row column_title">
			<div class="col-md-12">
				<div class="page_title">
					<h2>Öne Çıkan Alan İşlemleri</h2>
				</div>
			</div>
		</div>
		<!-- row -->
		<div class="row">
			<!-- table section -->
			<div class="col-md-12">
				<div class="white_shd full margin_bottom_30">
					<div class="full graph_head">
						<div class="heading1 margin_0">
							<h2>Öne Çıkan Alan Listesi</h2>
						</div>
					</div>
					<div class="table_section padding_infor_info">
						<div class="table-responsive-sm">
							<table class="table">
								<thead>
									<tr>
										<th>Başlık 1</th>
										<th>Başlık 2</th>
										<th>Başlık 3</th>
										<th>Açıklama 1</th>
										<th>Açıklama 2</th>
										<th>Açıklama 3</th>
										<th>Sil</th>
										<th>Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.Title1</td>
											<td>@item.Title2</td>
											<td>@item.Title3</td>
											<td>@item.Description1</td>
											<td>@item.Description2</td>
											<td>@item.Description3</td>
											<td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-outline-success">Güncelle</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Slider/CreateSlider/" class="btn btn-outline-primary">Yeni Öne Çıkarılan Girişi</a>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>

</div>

