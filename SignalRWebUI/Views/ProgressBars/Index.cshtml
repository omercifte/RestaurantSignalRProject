	<link rel="stylesheet" href="~/Ready-Bootstrap-Dashboard-master/assets/css/demo.css">
</head>


<div class="content">
	<div class="container-fluid">


		<script type="text/javascript">

				$(document).ready(() => {

					var connection = new signalR.HubConnectionBuilder()
						.withUrl("http://localhost:5003/SignalRHub/")
						.build();

					$("#connstatus").text(connection.state);


					connection.start().then(() => {
						$("#connstatus").text(connection.state);
							setInterval(() => {
						connection.invoke("SendProgress");
					}, 1000);

					}).catch(err => {
						console.log(err);
					});



				connection.on("ReceiveTotalMoneyCaseAmount", (value) => {
					$("#totalmoneycaseamount").text(value);
				});

			connection.on("ReceiveActiveOrderCount", (value2) => {
					$("#activeordercount").text(value2);
				});

				connection.on("ReceiveTableCount", (value3) => {
					$("#tablecount").text(value3);
				});

				connection.on("ReceiveTableCount", (value4) => {
					$("#totalTableCountProgress").empty();
					$("#totalTableCountProgress").append(`
						<div class="d-flex justify-content-between mb-1">
						<span class="text-muted">Toplam Masa Sayısı</span>
						<span class="text-muted fw-bold"> ${value4}</span>
						</div>
						<div class="progress mb-2" style="height: 7px;">
						<div class="progress-bar bg-success" role="progressbar" style="width: ${value4}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value4}%"></div>
						</div>
					`);
				});

				// connection.on("ReceiveTotalOrderCount", (value5) => {
				// 	$("#totalOrderCountProgress").empty();
				// 	$("#totalOrderCountProgress").append(`
				// 		<div class="d-flex justify-content-between mb-1">
				// 		<span class="text-muted">Toplam Sipariş Sayısı</span>
				// 		<span class="text-muted fw-bold"> ${value5}</span>
				// 		</div>
				// 		<div class="progress mb-2" style="height: 7px;">
				// 		<div class="progress-bar bg-success" role="progressbar" style="width: ${value5}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value5}%"></div>
				// 		</div>
				// 	`);
				// });

				});
		</script>

		<h4 class="page-title">Admin İstatistikler</h4>
		<div class="row">
			<div class="col-md-12">


				<div class="row row-card-no-pd">
					<div class="col-md-4">
						<div class="card">
							<div class="card-body">
								<p class="fw-bold mt-1">Kasadaki Toplam Tutar</p>
								<h4 id="totalmoneycaseamount"><b></b></h4>
								<a href="/Order/CreateOrder/" class="btn btn-primary btn-full text-left mt-3 mb-3"><i class="la la-plus"></i> Yeni Sipariş</a>
							</div>
							<div class="card-footer">
								<ul class="nav">
									<li class="nav-item"><a class="btn btn-default btn-link" href="/Order/Index/"><i class="la la-history"></i>Siparişler</a></li>
									<li class="nav-item ml-auto"><a class="btn btn-default btn-link" href="/ProgressBars/Index/"><i class="la la-refresh"></i> Sayfayı Yenile</a></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-md-5">
						<div class="card">
							<div class="card-body">
								<div class="progress-card" id="totalTableCountProgress">
									
								</div>
								@* <div class="progress-card" id="totalOrderCountProgress">
									
								</div> *@
							
							
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<div class="card card-stats">
							<div class="card-body">
								<p class="fw-bold mt-1">Anlık İstatistikler</p>
								<div class="row">
									<div class="col-5">
										<div class="icon-big text-center icon-warning">
											<i class="la la-pie-chart text-warning"></i>
										</div>
									</div>
									<div class="col-7 d-flex align-items-center">
										<div class="numbers">
											<p class="card-category">Aktif Siparişler</p>
											<h4 class="card-title" id="activeordercount"></h4>
										</div>
									</div>
								</div>
								<hr />
								<div class="row">
									<div class="col-5">
										<div class="icon-big text-center">
											<i class="la la-heart-o text-primary"></i>
										</div>
									</div>
									<div class="col-7 d-flex align-items-center">
										<div class="numbers">
											<p class="card-category">Masa Sayısı</p>
											<h4 class="card-title" id="tablecount"></h4>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
